{
  "name": "codetations",
  "displayName": "codetations",
  "publisher": "codetations",
  "repository": "github:elmisback/codetations",
  "description": "Rich code annotations for VS Code",
  "version": "0.0.12",
  "engines": {
    "vscode": "^1.91.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [{
        "id": "codetations-sidebar",
        "title": "Codetations",
        "icon": "$(zap)"
      }]
    },
    "views": {
      "codetations-sidebar": [{
        "id": "codetations-annotations",
        "name": "Annotations",
        "type": "webview"
      }]
    },
    "commands": [
      {
        "command": "codetations.showAnnotations",
        "title": "Codetations: Show Notes",
        "icon": "$(zap)"
      },
      {
        "command": "codetations.addAnnotation",
        "title": "Codetations: Add Note"
      },
      {
        "command": "codetations.removeAnnotation",
        "title": "Codetations: Remove Note"
      },
      {
        "command": "codetations.sendTestMessage",
        "title": "Codetations: Test"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codetations.showAnnotations",
          "group": "navigation"
        },
        {
          "command": "codetations.addAnnotation",
          "group": "navigation"
        },
        {
          "command": "codetations.removeAnnotation",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "codetations.showAnnotations",
          "group": "navigation"
        }
      ]
    }
  },
  "activationEvents": [
    "*"
  ],
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "watch:webview": "cd webview-ui && npm run watch",
    "vscode:prepublish": "npm run build:webview && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/glob": "^7.1.3",
    "@types/node": "^22.0.2",
    "@types/vscode": "^1.91.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "typescript": "^4.9.5",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "openai": "^4.53.2",
    "ws": "^8.18.0"
  },
  "extensionDependencies": [
    "github.copilot"
  ]
}
